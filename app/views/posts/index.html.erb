<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts!!</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>

<hr />


<div id="images">
  <% @images.each do |image| %>
    <%= render image %>
    <p>
      <%= link_to "Show this image", image %>
    </p>
  <% end %>  
</div>

<%= link_to "New image", new_image_path %>

<p><%= @links %></p>

<p><%= @posts %></p>



